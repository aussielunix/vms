#cloud-config
hostname: VMNAME
fqdn: VMNAME.lunix.lan
manage_etc_hosts: true
users:
  - name: lunix
    sudo: ALL=(ALL) NOPASSWD:ALL
    groups: users, admin
    home: /home/lunix
    shell: /bin/bash
    lock_passwd: false
    passwd: $6$rounds=4096$TmkVPIlsI3BI.f$Gi3sp/uAvlIham3.aQ2S5ZIxn2CzpyXJxgs.vYvWULmlv6vaPq5L3HI8oAplS9h6uQXjIYwfN8JSG/JYI43Pz1
    ssh-authorized-keys:
      - ssh-rsa  Mick Pollard <aussielunix@gmail.com>
  - name: ubuntu
    sudo: ALL=(ALL) NOPASSWD:ALL
    groups: users, admin
    home: /home/ubuntu
    shell: /bin/bash
    lock_passwd: false
    ssh-authorized-keys:
      - ssh-rsa  Mick Pollard <aussielunix@gmail.com>
# only cert auth via ssh (console access can still login)
ssh_pwauth: false
disable_root: false
packages:
  - qemu-guest-agent

# Run apt or yum upgrade
package_upgrade: true

growpart:
  mode: auto
  devices: ['/']

# every boot
bootcmd:
    - [ sh, -c, 'echo ran cloud-init again at $(date) | sudo tee -a /root/bootcmd.log' ]

# run once for setup
runcmd:
    - [ sh, -c, 'update-grub' ]
    - [ sh, -c, 'touch /home/ubuntu/.ready']

# reboot so grub config takes affect
power_state:
  mode: reboot

# written to /var/log/cloud-init-output.log
final_message: "The system is finally up, after $UPTIME seconds"
